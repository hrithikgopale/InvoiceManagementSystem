@model InvoiceManagementSystem.Models.Invoice
@{
    ViewData["Title"] = "Create Invoice";
    var parties = ViewBag.Parties as List<InvoiceManagementSystem.Models.Party>;
    var inventoryItems = ViewBag.InventoryItems as List<InvoiceManagementSystem.Models.InventoryItem>;
}

<h2>Create Invoice</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Party</label>
        <select name="partyId" class="form-control">
            <option value="">--Select Party--</option>
            @foreach (var party in parties)
            {
                <option value="@party.Id">@party.Name</option>
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label>Items</label>
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < inventoryItems.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="itemIds" value="@inventoryItems[i].Id" />
                            @inventoryItems[i].Name (@inventoryItems[i].UnitPrice)
                        </td>
                        <td>
                            <input type="number" name="quantities" class="form-control" value="1" min="1" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <button type="submit" class="btn btn-primary">Create Invoice</button>
</form>
